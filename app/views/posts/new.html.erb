<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "author", "Username" %>
    <%= form.text_field "author" %>
  </p>
  <p>
    <%= form.label "Caption" %>
    <%= form.text_field "body" %>
    <%= form.label "Image URL" %>
    <%= form.text_field "image" %>
  </p>
  <%= form.submit %>
<% end %>